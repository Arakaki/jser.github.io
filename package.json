{
  "name": "jser",
  "description": "JSer.info blog",
  "version": "0.0.1",
  "homepage": "https://github.com/jser/jser.github.io/",
  "repository": {
    "type": "git",
    "url": "https://github.com/jser/jser.github.io.git"
  },
  "main": "index.js",
  "scripts": {
    "test": "node test/index-checker.js",
    "build": "browserify --ignore WNdb --ignore lapack src/related-item.js -o public/build/related-item.js",
    "watch": "watchify --ignore WNdb --ignore lapack src/related-item.js -o public/build/related-item.js",
    "lint:spell": "textlint --rulesdir test/rules -f pretty-error",
    "textlint": "textlint -f pretty-error _i18n/ja/_posts/2015/*.md"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "directories": {
    "test": "test/"
  },
  "author": "azu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jser/jser.github.io/issues"
  },
  "devDependencies": {
    "babelify": "^7.2.0",
    "bower": "^1.3.8",
    "bower-installer": "^1.2.0",
    "browserify": "^12.0.1",
    "front-matter": "^2.0.0",
    "glob": "^6.0.1",
    "markdown-to-ast": "^3.1.1",
    "spellcheck-tech-word-textlint-rule": "^3.0.0",
    "spellcheck-technical-word": "^1.1.0",
    "textlint": "^5.0.2",
    "textlint-plugin-jser-markdown": "^1.0.1",
    "textlint-rule-helper": "^1.1.2",
    "textlint-rule-no-doubled-joshi": "^1.2.3",
    "textlint-rule-no-mix-dearu-desumasu": "^1.4.0",
    "textlint-rule-no-start-duplicated-conjunction": "^1.0.6",
    "textlint-rule-spellcheck-tech-word": "^4.1.0",
    "watchify": "^3.3.1"
  },
  "dependencies": {
    "deku": "^0.5.4",
    "jser-stat": "^1.4.0",
    "remove-markdown": "0.0.6",
    "virtual-element": "^1.1.1"
  }
}
